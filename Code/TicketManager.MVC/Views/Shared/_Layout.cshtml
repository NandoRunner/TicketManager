<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ticket Manager</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Gridmvc.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.9.1.min.js" type="text/javascript"> </script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/gridmvc.min.js" type="text/javascript"> </script>
    <script src="~/Scripts/gridmvc.js" type="text/javascript"> </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ticket", "", "Ticket", new { area = "" }, new { @class = "navbar-brand" }) 
                @Html.ActionLink("User", "", "User", new { area = "" }, new { @class = "navbar-brand" }) 
                @Html.ActionLink("Customer", "", "Customer", new { area = "" }, new { @class = "navbar-brand" }) 
                @Html.ActionLink("Contact Person", "", "Contact", new { area = "" }, new { @class = "navbar-brand" }) 
                @Html.ActionLink("Status", "", "Status", new { area = "" }, new { @class = "navbar-brand" }) 
                @Html.ActionLink("Status Detail", "", "StatusDetail", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FAndrade TecInfo</p>
        </footer>
    </div>

</body>
</html>